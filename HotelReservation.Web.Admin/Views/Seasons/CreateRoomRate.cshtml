@model HoteReservation.Web.Models.Season.RoomRateInputModel

@{
    ViewData["Title"] = "CreateRoomRate";
    
}

<h2>Add new Room Rate</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRoomRateToSeason" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="seasonId" value="@ViewBag.SeasonId" />
            <div class="form-group">
                <label asp-for="Room" class="control-label"></label>
                <select asp-for="Room.Id" asp-items="@(new SelectList(ViewBag.Rooms,"Id", "Type"))" class="form-control"></select>
               
                <span asp-validation-for="Room.Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Rate" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "GetAllRoomRatesBySeason", new { id = ViewBag.SeasonId }, new { @class = "btn btn-default"})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
