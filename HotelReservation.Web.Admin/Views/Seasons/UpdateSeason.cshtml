@model HoteReservation.Web.Models.Season.UpdateSeasonInputModel

@{
    ViewData["Title"] = "UpdateSeason";
}

<h2>Update @Model.Type</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateSeason">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value="@ViewBag.SeasonId" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Season" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Seasons" class="btn btn-default">Seasons</a>
</div>

