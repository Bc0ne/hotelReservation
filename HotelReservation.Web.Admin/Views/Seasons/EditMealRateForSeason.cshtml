@model HoteReservation.Web.Models.Season.MealRateUpdateInputModel

@{
    ViewData["Title"] = "EditMealRateForSeason";
}

<h2>Update Rate</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateMealRateForSeason" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="id" value="@Model.SeasonId" class="form-control" />
                <input type="hidden" name="rateId" value="@Model.MealRateId"  class="form-control" />
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Rate" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Meal Rates", "GetAllMealRatesBySeason", new { id = Model.SeasonId}, new { @class = "btn btn-default"})
   </div>

