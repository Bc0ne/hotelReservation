@model HoteReservation.Web.Models.Season.MealRateInputModel

@{
    ViewData["Title"] = "CreateMEalRate";

}

<h2>Add Meal Rate</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMealRateToSeason" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="seasonId" value="@ViewBag.SeasonId" />
            <div class="form-group">
                <label asp-for="MealId" class="control-label"></label>
                <select asp-for="MealId" asp-items="@(new SelectList(ViewBag.Meals,"Id", "Type"))" class="form-control"></select>

                <span asp-validation-for="MealId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Rate" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Meal Rates", "GetAllMealRatesBySeason", new { id = ViewBag.SeasonId }, new { @class = "btn btn-default"})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
