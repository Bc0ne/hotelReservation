@model IEnumerable<HoteReservation.Web.Models.Season.MealRateViewModel>

@{
    ViewData["Title"] = "MealRates";
}

<h2 class="center-block">Season Details</h2>
<div>
    <h4>Type : @ViewBag.Season.Type</h4>
    <h4>Starting date : @ViewBag.Season.StartingDate.ToString("dMM/dd/yyyy") </h4>
    <h4>Ending date: @ViewBag.Season.EndingDate.ToString("MM/dd/yyyy")</h4>
</div>
<p>
    @Html.ActionLink("Add Meal Rate", "AddMealRateToSeason", new { id = ViewBag.Season.Id }, new { @class = "btn btn-success" })

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MealType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MealType)
                </td>
                <td>
                    $ @Html.DisplayFor(modelItem => item.Rate)
                </td>

                <td>
                    @Html.ActionLink("Edit", "EditMealRateForSeason", new { id= ViewBag.Season.Id , rateId = item.MealId }, new { @class = "btn btn-info"})
                    @Html.ActionLink("Delete", "DeleteMealRateById", new { id = ViewBag.Season.Id, rateId = item.MealId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
